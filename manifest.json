{
    "name": "Super Sema",
    "description" : "With him the game goes like clockwork!",
    "version": "0.2",
    "manifest_version": 3,
    "browser_action": {
      "default_icon": "icon.png"
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["mutation.js"],
          "css": ["styles.css"]
        }
    ],
    "permissions": [
        "activeTab",
        "scripting",
        "background",
        "webRequest"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      "i/*"
    ]
}